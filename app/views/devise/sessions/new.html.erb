<div class="align-center-screen full-height columns">
  <div class="column is-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <div class="control has-icons-left has-icons-right">
          <%= f.email_field :email, autofocus: true, class: 'input' %>

          <span class="icon is-small is-left">
            <i class="fa fa-envelope"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fa fa-check"></i>
          </span>
        </div>
      </div>
      
      <div class="field">
        <%= f.label :password %>
        <div class="control has-icons-left has-icons-right">
          <%= f.password_field :password, autocomplete: "off", class: 'input' %>

          <span class="icon is-small is-left">
            <i class="fa fa-lock"></i>
          </span>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, class: 'switch' %>
          <%= f.label :remember_me, 'Lembrar-me' %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log In", class: 'button is-primary' %>
      </div>
    <% end %>

    <div class="has-text-centered">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="row users-list-fixed">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">@<%= current_user.try(:email).split('@')[0] %></h3>
    </div>
    <div class="panel-body">
      <ul>
        <% @users.each do |user| %>
          <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
        <% end %>

        <br>

        <% if current_user %>
        <div style="position: absolute; bottom: 0; width: 99%">
            <%= link_to 'Sair', destroy_user_session_path, class: 'logout-button', method: :delete %>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <ul id="conversations-list">
    <% @conversations.each do |conversation| %>
      <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
    <% end %>
  </ul>
</div>